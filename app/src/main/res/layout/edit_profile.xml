<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/darkest">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:background="@drawable/edit_shape"/>
        <EditText
            android:id="@+id/username_edit"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kanitsemibold"
            android:text="Tom Smith"
            android:layout_gravity="center"
            android:layout_marginTop="16sp"/>
        <EditText
            android:id="@+id/email_edit"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kanitsemibold"
            android:text="tom_smith@gmail.com"
            android:layout_gravity="center"
            android:layout_marginTop="16sp"/>
        <EditText
            android:id="@+id/password_edit"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kanitsemibold"
            android:hint="*********"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_marginTop="16sp"/>
        <Button
            android:id="@+id/save_editProfile_btn"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:background="@drawable/btn_shape"
            android:layout_marginStart="26sp"
            android:layout_marginEnd="26sp"
            android:layout_marginTop="26sp"
            android:text="@string/save"
            android:fontFamily="@font/kanitmedium"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>





